<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Button for operation (like +, -, *, etc.) -->
    <style name="ButtonStyle.Operation">
        <item name="android:backgroundTint">@color/operationButtonBackground</item>
        <item name="android:textColor">@color/operationButtonText</item>
    </style>

    <!-- Button for numbers -->
    <style name="ButtonStyle.Number">
        <item name="android:backgroundTint">@color/numberButtonBackground</item>
        <item name="android:textColor">@color/numberButtonText</item>
    </style>

    <!-- Display TextView -->
    <style name="TextDisplay">
        <item name="android:textColor">@color/displayTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">20dp</item>
    </style>

</resources>
