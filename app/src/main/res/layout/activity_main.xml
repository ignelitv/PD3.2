<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display screen -->
    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextDisplay"
        android:text="@string/default_display_text" />

    <!-- Calculator buttons grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="6">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_mc" />
        <Button
            android:id="@+id/btnMR"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_mr" />
        <Button
            android:id="@+id/btnMS"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_ms" />
        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_mplus" />
        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_mminus" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_back" />
        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_ce" />
        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_c" />
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_plusminus" />
        <Button
            android:id="@+id/btnSqrt"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_sqrt" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_7" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_8" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_9" />
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Operation"
            android:text="@string/btn_divide" />
        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_percent" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_4" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_5" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_6" />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Operation"
            android:text="@string/btn_multiply" />
        <Button
            android:id="@+id/btnOneOverX"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_oneoverx" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_1" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_2" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_3" />
        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Operation"
            android:text="@string/btn_subtract" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Operation"
            android:text="@string/btn_equals" />

        <!-- Row 6 -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            style="@style/ButtonStyle.Number"
            android:text="@string/btn_0" />
        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle"
            android:text="@string/btn_dot" />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            style="@style/ButtonStyle.Operation"
            android:text="@string/btn_add" />

    </GridLayout>
</LinearLayout>
